@section Styles {
    <style>
        .song-card {
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }

        .song-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }

        .card-title {
            font-size: 1.1rem;
            font-weight: 600;
            margin-bottom: 0.5rem;
        }

        .spotify-player {
            margin-top: 1rem;
            border-radius: 8px;
            overflow: hidden;
        }

        .btn-primary {
            background-color: #1DB954;
            border-color: #1DB954;
        }

        .btn-primary:hover {
            background-color: #1ed760;
            border-color: #1ed760;
        }
    </style>
}
